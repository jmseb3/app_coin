<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_list_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/kor_name"
                android:textColor="@color/match2"
                android:fontFamily="@font/maplestory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비트코인"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/eng_name"
                app:layout_constraintHorizontal_weight="6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/market_info"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/eng_name"
                android:layout_width="0dp"
                android:textColor="@color/match2"
                android:fontFamily="@font/maplestory"
                android:layout_height="wrap_content"
                android:text="Bitcoin"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/market_info"
                app:layout_constraintTop_toBottomOf="@id/kor_name" />

            <TextView
                android:id="@+id/market_info"
                android:textColor="@color/match2"
                android:fontFamily="@font/maplestory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="KRW-BTC"
                app:layout_constraintBottom_toTopOf="@id/now_price"
                app:layout_constraintHorizontal_weight="3"
                app:layout_constraintLeft_toRightOf="@id/kor_name"
                app:layout_constraintRight_toLeftOf="@id/detail_arrow"
                app:layout_constraintTop_toTopOf="@id/kor_name" />

            <TextView
                android:id="@+id/now_price"
                android:layout_width="0dp"
                android:textColor="@color/match2"
                android:fontFamily="@font/maplestory"
                android:layout_height="wrap_content"
                android:text="dddddd원"
                app:layout_constraintBottom_toBottomOf="@id/eng_name"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/eng_name"
                app:layout_constraintRight_toLeftOf="@id/detail_arrow"
                app:layout_constraintTop_toBottomOf="@id/market_info" />

            <ImageView
                android:id="@+id/detail_arrow"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@id/market_info"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>